<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".Login.LoginActivity"    android:background="@drawable/background">    <ImageView        android:id="@+id/login_doct"        android:layout_width="300dp"        android:layout_height="100dp"        android:layout_centerHorizontal="true"        android:src="@drawable/pilulebg"        app:layout_constraintBottom_toTopOf="@+id/register"        app:layout_constraintHorizontal_bias="0.495"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="parent" />    <LinearLayout        android:id="@+id/register"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="vertical"        android:paddingLeft="30dp"        android:paddingRight="30dp"        app:layout_constraintBottom_toBottomOf="parent"        android:background="@drawable/format">        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="15dp"            android:fontFamily="@font/lemon"            android:text="S'identifier"            android:textAlignment="center"            android:textColor="@color/colorPrimaryDark"            android:textSize="25sp" />        <EditText            android:id="@+id/login_User"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="20dp"            android:background="@drawable/input_design"            android:hint="E-mail"            android:text="salmen@gmail.com"            android:inputType="textEmailAddress"            android:padding="10dp" />        <EditText            android:id="@+id/login_password"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="20dp"            android:background="@drawable/input_design"            android:text="salmen998"            android:hint="Mot de Passe"            android:inputType="textPassword"            android:padding="10dp" />        <Button            android:id="@+id/login_btn"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:background="@drawable/buttons"            android:padding="10dp"            android:text="Se Connecter"            android:textColor="#fff"            android:textSize="22dp" />        <TextView            android:id="@+id/for_pass"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10sp"            android:text="Mot de passe Oublier ? "            android:textAlignment="center"            android:textColor="@color/colorPrimaryDark"            android:textSize="20dp" />        <Button            android:id="@+id/create_btn"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginBottom="10dp"            android:background="@drawable/buttons"            android:padding="10dp"            android:text="crÃ©er un compte"            android:textColor="#fff"            android:textSize="22dp" />        <ProgressBar            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:visibility="invisible"/>        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>    </LinearLayout></androidx.constraintlayout.widget.ConstraintLayout>